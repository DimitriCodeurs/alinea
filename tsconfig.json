{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "preserveWatchOutput": true,
    "outDir": ".types",
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "paths": {
      "@alinea/input.*/view": ["./packages/input/*/src/view.ts"],
      "@alinea/input.*": ["./packages/input/*/src/index.ts"],
      "@alinea/auth.*": ["./packages/input/*/src"],
      "@alinea/auth.passwordless/*": ["./packages/auth/passwordless/src/*"],
      "@alinea/core/*": ["./packages/core/src/*"],
      "@alinea/server/*": ["./packages/server/src/*"],
      "@alinea/store/*": ["./packages/store/src/*"],
      "@alinea/editor/*": ["./packages/editor/src/*"],
      "@alinea/ui": ["./packages/ui/src"],
      "@alinea/ui/*": ["./packages/ui/src/*"],
      "@alinea/*": ["./packages/*/src"]
    },
    "plugins": [{"name": "typescript-plugin-css-modules"}],
    "types": ["react/next", "react-dom/next"]
  },
  "include": ["packages"],
  "exclude": ["node_modules", "packages/website", "packages/stories"]
}
